---
const { imgSrc, title, description, inputId } = Astro.props;
---

<div class="product-card">
  <img src={imgSrc} alt={title} loading="lazy">
  <h3>{title}</h3>
  <p>{description}</p>
  <div class="counter-container-productos">
    <button type="button" class="decrement-btn" data-input-id={inputId}>-</button>
    <input type="number" id={inputId} name={inputId} min="1" max="10" value="1">
    <button type="button" class="increment-btn" data-input-id={inputId}>+</button>
  </div>
</div>

