---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Formulario de contacto extendido" />
    <meta name="keywords" content="Formulario, Contacto, Validación" />
    <meta name="author" content="Jorge Iván Rubiano Martín" />
    <title>Contáctanos - LVJ Agendas</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/styles.css">
    <script src="scripts/captcha.js" defer></script>
  </head>
  <body>
    <Header />
    <main>
        <section id="formulario-extendido">
            <h1>Contáctanos</h1>
            <form class="formulario-extendido" action="#" method="post">
                <label for="nombre">Tu Nombre</label>
                <input type="text" id="nombre" name="nombre" required placeholder="Escribe tu nombre" />

                <label for="ciudad">Ciudad</label>
                <input type="text" id="ciudad" name="ciudad" required placeholder="Escribe tu ciudad" />

                <label for="celular">Celular</label>
                <input type="tel" id="celular" name="celular" required placeholder="Escribe tu número de celular" />

                <label for="email">Correo Electrónico</label>
                <input type="email" id="email" name="email" required placeholder="Escribe tu correo electrónico" />

                <label for="mensaje">Mensaje</label>
                <textarea id="mensaje" name="mensaje" rows="5" required placeholder="Escribe tu mensaje"></textarea>

                <div class="captcha-container-contacto">
                    <label for="captcha" class="captcha-label">
                    Por favor resuelve: <span class="math-problem"></span> =
                    </label>
                    <input type="text" id="captcha" name="captcha" required placeholder="Tu respuesta" />
                </div>
                <button type="submit">Enviar</button>
            </form>
        </section>
    </main>
    <Footer />
  </body>
</html>
  